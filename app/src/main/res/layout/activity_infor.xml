<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgChitiet"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/pho_store"
        android:scaleType="fitXY"
        android:padding="15dp"/>
    <TextView
        android:id="@+id/tvTenMonAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gỏi Cuốn"
        android:layout_below="@id/imgChitiet"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="#F44336"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvGiaMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="450000"
        android:textSize="25sp"
        android:textColor="#FFC107"
        android:layout_below="@id/tvTenMonAn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/tvMoCua"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gio mo cua: 9h-22h"
        android:textSize="15sp"
        android:layout_below="@id/tvTenMonAn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#050505" />
    <TextView
        android:id="@+id/tvQuanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITC"
        android:textSize="25sp"
        android:textColor="#F44336"
        android:textStyle="bold|italic"
        android:layout_below="@id/tvGiaMon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvDiaChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dia chi: 12 Trinh Dinh Thao"
        android:textStyle="italic"
        android:textColor="#F44336"
        android:layout_toRightOf="@id/tvQuanAn"
        android:layout_below="@id/tvGiaMon"
        android:layout_marginTop="23dp"
        android:textSize="20sp"
        android:paddingLeft="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/tvWebsite"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website:http://itc.edu.vn"
        android:layout_below="@id/tvQuanAn"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/tvSdt"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="090909090"
        android:textSize="20sp"
        android:textColor="#0B0B0B"
        android:layout_below="@id/tvWebsite"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/slide5"
        android:scaleType="fitXY"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>